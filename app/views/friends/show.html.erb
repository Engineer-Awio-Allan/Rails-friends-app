<p class="text-success"><%= notice %></p>

<div class="card mt-4 shadow-sm">
  <div class="card-body">
    <%= render @friend %>
  </div>
  <div class="card-footer d-flex justify-content-between bg-light">
    <div>
      <%= link_to "Edit this friend", edit_friend_path(@friend), class: "btn btn-primary" %>
      <%= link_to "Back to friends", friends_path, class: "btn btn-secondary" %>
    </div>
    <div>
      <%= button_to "Destroy this friend", @friend, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this friend?" } %>
    </div>
  </div>
</div>

