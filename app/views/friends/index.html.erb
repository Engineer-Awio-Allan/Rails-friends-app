<p style="color: green"><%= notice %></p>

<% content_for :title, "Friends" %>

<h1>Friends</h1>

<table class="table table-striped table-bordered">
  <thead class=" table-dark">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
   
      <tr>
         <% if friend.user == current_user%>
        <td><%= friend.First_name %></td>
        <td><%= friend.Last_name %></td>
        <td><%= friend.Email %></td>
        <td><%= friend.Phone %></td>
        <td><%= friend.Twitter %></td>
        <td>
          <%= link_to "Show", friend, class: "btn btn-info btn-sm" %>
          <%= link_to "Edit", edit_friend_path(friend), class: "btn btn-warning btn-sm" %>
          <%= link_to "Delete", friend, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mt-3">
  <%= link_to "New friend", new_friend_path, class: "btn btn-primary" %>
</div>
